<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymApp.Page5"
             Title="Page5"
              Shell.NavBarIsVisible="False"
             WidthRequest="452"
             HeightRequest="720">
    <VerticalStackLayout Background="#6e9cd2">
        <Label Text="Step 5/5" FontSize="50" TextColor="White" Margin="0,100,0,0" HorizontalOptions="Center"/>
        <Label Text="What's your height and weight?" Margin="0,30" TextColor="White" FontSize="25" HorizontalTextAlignment="Center"/>

        <Frame WidthRequest="310" HeightRequest="80" CornerRadius="40">
            <Entry HorizontalOptions="Center" Placeholder="Height"  FontSize="25" WidthRequest="270"  HeightRequest="50" Margin="0,0,0,30" x:Name="Text1" BackgroundColor="White" />
        </Frame>

        <Frame WidthRequest="310" HeightRequest="80" CornerRadius="40">
            <Entry HorizontalOptions="Center" Placeholder="Weight"  FontSize="25" WidthRequest="270"  HeightRequest="50" Margin="0,0,0,30" x:Name="Text2" BackgroundColor="White"/>
        </Frame>

        <Button Clicked="Button_Clicked" Text="Next" FontSize="30" TextColor="#6e9cd2" BackgroundColor="White"  Margin="0,70" CornerRadius="50" WidthRequest="300" HeightRequest="90" BorderColor="Gray"  BorderWidth="2"/>
    </VerticalStackLayout>
</ContentPage>